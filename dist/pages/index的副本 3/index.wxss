page {
  background: #ededed; }

.logo {
  width: 280rpx;
  height: 90rpx;
  margin: 0 auto;
  padding: 50rpx 0; }
  .logo image {
    width: 100%;
    height: 100%; }

.brand {
  padding: 0 20rpx;
  margin-bottom: 120rpx; }
  .brand view {
    text-align: center;
    margin-bottom: 20rpx; }
  .brand text {
    color: #1b65ce; }

.user,
.pwd {
  padding: 10rpx 0;
  width: 480rpx;
  margin: 0 auto;
  border: none;
  border-bottom: 1px solid #1b65ce;
  background: transparent;
  border-radius: 0;
  font-size: 30rpx;
  margin-bottom: 40rpx; }
  .user input,
  .pwd input {
    padding: 0 10rpx; }

.forget-pwd {
  text-align: right;
  margin: 0 auto 40rpx;
  width: 480rpx; }
  .forget-pwd text {
    font-size: 26rpx; }

.btn {
  margin-bottom: 40rpx; }
  .btn button {
    width: 480rpx;
    height: 80rpx;
    color: #1b65ce;
    font-size: 30rpx;
    border: 2rpx solid #1b65ce;
    border-radius: 35rpx;
    background-color: transparent; }

.register {
  text-align: right;
  margin: 0 auto 20rpx;
  width: 480rpx; }
  .register text {
    font-size: 26rpx; }

.bg {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1; }
  .bg image {
    width: 100%;
    height: 100%;
    opacity: .35; }
